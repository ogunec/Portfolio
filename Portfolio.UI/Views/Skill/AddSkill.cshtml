@model Skill
@{
    ViewData["Title"] = "Yetenek Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Ekleme Sayfası</h3>
</div>
<br />
<form method="post" class="form-group">
	<div class="mb-3">
		<label class="form-label" asp-for="Title"><strong>Yetenek</strong></label>
		<input type="text" class="form-control" asp-for="Title" />
		<span asp-validation-for="Title"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Value" class="control-label"><strong>Oran</strong></label>
		<input type="text" class="form-control" asp-for="Value" />
		<span asp-validation-for="Value"></span>
	</div>
	<div><button class="btn btn-primary" type="submit">Kaydet</button></div>
</form>