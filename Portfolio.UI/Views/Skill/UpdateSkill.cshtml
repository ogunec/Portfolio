@model Skill
@{
    ViewData["Title"] = "Yetenek Güncelleme";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
	<h3 class="mb-0">Yetenek Güncelleme Sayfası</h3>
</div>
<br />
<form method="post">
	<div>
		<input asp-for="SkillID" hidden />
		<div class="mb-3">
			<label asp-for="Title" class="form-label"><strong>Yetenek</strong></label>
			<input asp-for="Title" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Value" class="control-label"><strong>Oran</strong></label>
			<input asp-for="Value" class="form-control" />
		</div>
		<button class="btn btn-success" type="submit" asp-action="UpdateSkill" asp-controller="Skill">Güncelle</button>
	</div>	
</form>

