@model Message


<div class="col-md-6" data-aos="zoom-in" data-aos-delay="100">
    <div class="bg-light my-2 p-3 pt-2">
        <form method="post">
            <div class="form-group my-2">
                <label for="name" class="form-label fw-bolder">İsim</label>
                <input class="form-control" type="text" id="name" name="Name" required>
            </div>
            <div class="form-group my-2">
                <label for="email" class="form-label fw-bolder">Mail</label>
                <input class="form-control" type="email" id="email" name="Mail" required>
            </div>
            <div class="form-group my-2">
                <label for="message" class="form-label fw-bolder">Mesaj</label>
                <textarea class="form-control" style="resize: none;" id="message" name="Content" rows="4" required></textarea>
            </div>
            <button class="btn btn-primary mt-2" type="submit" asp-action="SendMessage" asp-controller="Default">Gönder</button>
        </form>
    </div>
</div>


